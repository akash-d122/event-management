{
  "name": "event-management",
  "version": "1.0.0",
  "description": "Event Management REST API with user registration and capacity management",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "setup-db": "node scripts/setup-db.js",
    "migrate": "node scripts/migrate.js",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=html",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:edge-cases": "jest tests/edge-cases/",
    "test:concurrent": "jest tests/concurrent/",
    "test:all": "jest tests/unit/ tests/integration/ tests/edge-cases/ tests/concurrent/",
    "test:ci": "jest --ci --coverage --watchAll=false --testResultsProcessor=jest-junit",
    "test:coverage-report": "npm run test:coverage && node tests/coverage/coverageSetup.js",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npx audit-ci --moderate"
  },
  "keywords": ["event", "management", "api", "rest", "nodejs", "express", "postgresql"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "babel-jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "audit-ci": "^6.6.1"
  },

}
